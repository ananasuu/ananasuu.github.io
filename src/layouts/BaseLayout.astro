---
const imprint = await import('../data/imprint.json').then(m => m.default);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Nina's creative portfolio showcasing her cosplay and crafting skills while also showcasing good resources."
    />
    <meta name="keywords" content="cosplay, crafting, portfolio, costume design, prop making, creative arts" />
    <meta name="author" content="Nina Friedrich" />
    <link rel="canonical" href="https://ananasuu.github.io/" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ananasuu.github.io/" />
    <meta property="og:title" content="NinuMakes - Cosplay & Crafting Portfolio" />
    <meta property="og:description" content="Nina's creative portfolio showcasing her cosplay and crafting skills while also showcasing good resources." />
    <meta property="og:image" content="https://ananasuu.github.io/assets/img/Nina_Pfp.jpg" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://ananasuu.github.io/" />
    <meta property="twitter:title" content="NinuMakes - Cosplay & Crafting Portfolio" />
    <meta property="twitter:description" content="Nina's creative portfolio showcasing her cosplay and crafting skills while also showcasing good resources." />
    <meta property="twitter:image" content="https://ananasuu.github.io/assets/img/Nina_Pfp.jpg" />
    <!-- Critical CSS loaded synchronously -->
    <link rel="stylesheet" href="/assets/styles/index.css" />
    <!-- Preload LCP image -->
    <link rel="preload" href="/assets/img/Nina_Pfp.avif" as="image" type="image/avif" fetchpriority="high" />
    <link rel="preload" href="/assets/img/Nina_Pfp.jpg" as="image" type="image/jpeg" fetchpriority="high" />
    <!-- Preload JavaScript modules -->
    <link rel="modulepreload" href="./index.js" />
    <link rel="modulepreload" href="./data.js" />
    <link rel="modulepreload" href="./workdata.js" />    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Preload Google Fonts CSS -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet"
      />
      <link
        href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400&display=swap"
        rel="stylesheet"
      />
    </noscript>
    <title>NinuMakes - Cosplay & Crafting Portfolio</title>

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Nina Friedrich",
      "url": "https://ananasuu.github.io/",
      "image": "https://ananasuu.github.io/assets/img/Nina_Pfp.jpg",
      "jobTitle": "Cosplayer & Crafter",
      "description": "Creative portfolio showcasing cosplay and crafting skills",
      "sameAs": [
        "https://github.com/ananasuu"
      ]
    }
    </script>
  </head>

  <slot />

          <footer>
          <h2>Impressum</h2>
          <p>
            {imprint.name}<br />
            {imprint.address} <br />
            {imprint.street} <br />
            {imprint.city} <br /><a href={"mailto:" + imprint.email}
              >{imprint.email}</a
            ><br />
            <a href={imprint.url}
              >Contact Formular</a>
          </p>
          <ul>
            <li>
              <a href={imprint.socialMedia.instagram}>
                <img
                  src="/assets/img/icons8_instagram.png"
                  alt="Instagram"
                  width="50"
                  height="50"
                />
              </a>
            </li>
            <li>
              <a href={imprint.socialMedia.github}>
                <img
                  src="/assets/img/icons8_github.png"
                  alt="GitHub"
                  width="50"
                  height="50"
                />
              </a>
            </li>
            <li>
              <a href={imprint.socialMedia.tiktok}>
                <img
                  src="/assets/img/icons8_tiktok.png"
                  alt="TikTok"
                  width="50"
                  height="50"
                />
              </a>
            </li>
          </ul>
          <p class="copyright">
            Â© Untitled. Design: <a href="https://html5up.net">HTML5 UP</a>.
          </p>
        </footer>
</html>