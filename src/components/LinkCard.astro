---
type LinkItem = {
    title: string;
    url: string;
    use?: string;
    description?: string;
    imageUrl?: string;
};

const { links = [] } = Astro.props as { links?: LinkItem[] };
---

<ul class="infolinks">
    {links.map((link) => (
        <li>
            <a class="infocard link" href={link.url}>
                <h3>{link.title}</h3>
                {link.use ? <p class="use">{link.use}</p> : null}
                {link.imageUrl ? (
                    <picture>
                        <img src={link.imageUrl} alt={link.title} loading="lazy" />
                    </picture>
                ) : null}
                {link.description ? <p>{link.description}</p> : null}
            </a>
        </li>
    ))}
</ul>
